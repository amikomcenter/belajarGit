<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".BarangUpdate">

    <EditText
        android:id="@+id/barangUpdateNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dummy_nama_barang"
        android:inputType="textCapSentences"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/barangUpdateStok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/dummy_stok_barang"
        android:inputType="number"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/barangUpdateNama"
        app:layout_constraintStart_toStartOf="@+id/barangUpdateNama"
        app:layout_constraintTop_toBottomOf="@+id/barangUpdateNama" />

    <Button
        android:id="@+id/barangUpdateBtnUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="Update Data Barang"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/barangUpdateStok"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>